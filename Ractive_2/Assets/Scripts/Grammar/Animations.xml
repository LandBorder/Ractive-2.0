<?xml version="1.0" encoding="utf-8"?>
<grammar version="1.0" xmlns="http://www.w3.org/2001/06/grammar"
 xml:lang="en-US" tag-format="semantics/1.0">

	<rule id = "Animations_Obj" scope="public">
		<item repeat="0-1"> please </item>
		<one-of>
			<item>
				fall on your knees <tag> out.Animation = "Animation_DropToKnees"; </tag>
			</item>
			<item>
				drop to your knees <tag> out.Animation = "Animation_DropToKnees"; </tag>
			</item>
			<item>
				put your hands up <tag> out.Animation = "Animation_HandsUp"; </tag>
			</item>
			<item>
				don't do anything <tag> out.Animation = "Animation_"; </tag>
			</item>
		</one-of>
		<item repeat="0-1"> please </item>
	</rule>

</grammar>