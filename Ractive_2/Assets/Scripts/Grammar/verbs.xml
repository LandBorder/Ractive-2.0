<?xml version="1.0" encoding="utf-8"?>
<grammar version="1.0" xmlns="http://www.w3.org/2001/06/grammar"
 xml:lang="en-US" tag-format="semantics/1.0">


	<rule id = "Begin_Vb" scope="public">
		<one-of>
			<item> begin </item>
			<item> start </item>
			<item> commence </item>
			<item> continue </item>
		</one-of>
	</rule>

	<rule id = "End_Vb" scope="public">
		<one-of>
			<item> end </item>
			<item> stop </item>
			<item> pause </item>
			<item> halt </item>
		</one-of>
	</rule>
	
	<rule id = "Movement_Vb" scope="public">
		<one-of>
			<item> go </item>
			<item> move </item>
			<item> walk </item>
			<item> run </item>
		</one-of>
	</rule>

	<rule id = "Speaking_Vb_SimplePresent" scope="public">
		<one-of>
			<item> say </item>
			<item> play </item>
			<item> recite </item>
			<item> try </item>
		</one-of>
	</rule>

	<rule id = "Speaking_Vb_PresentProgressive" scope="public">
		<one-of>
			<item> reciting </item>
			<item> speaking </item>
			<item> the speech </item>
		</one-of>
	</rule>

	<rule id = "Start_Vb" scope="public">
		<one-of>
			<item> go ahead </item>
			<item> action </item>
			<item> start </item>
			<item> play </item>
		</one-of>
	</rule>

	<rule id = "Stop_Vb" scope="public">
		<one-of>
			<item> cut </item>
			<item> stop </item>
			<item> halt </item>
			<item> hold on </item>
		</one-of>
	</rule>
	
</grammar>